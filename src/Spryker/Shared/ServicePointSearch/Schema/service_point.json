{
    "settings": {
        "index": {
            "number_of_shards": 1,
            "number_of_replicas": 1
        },
        "analysis": {
            "analyzer": {
                "suggestion_analyzer": {
                    "tokenizer": "standard",
                    "filter": ["lowercase"]
                }
            },
            "normalizer": {
                "lowercase_normalizer": {
                    "type": "custom",
                    "char_filter": [],
                    "filter": ["lowercase"]
                }
            }
        }
    },
    "mappings": {
        "service_point": {
            "dynamic_templates": [
                {
                    "search-result-data": {
                        "mapping": {
                            "index": "false"
                        },
                        "path_match": "search-result-data.*"
                    }
                },
                {
                    "string_sort": {
                        "mapping": {
                            "normalizer": "lowercase_normalizer",
                            "type": "keyword"
                        },
                        "path_match": "string-sort.*"
                    }
                }
            ],
            "properties": {
                "search-result-data": {
                    "type": "object",
                    "properties": {}
                },
                "type": {
                    "type": "keyword"
                },
                "store": {
                    "type": "keyword"
                },
                "full-text": {
                    "type": "text"
                },
                "full-text-boosted": {
                    "type": "text"
                },
                "completion-terms": {
                    "type": "keyword",
                    "normalizer": "lowercase_normalizer"
                },
                "suggestion-terms": {
                    "type": "text",
                    "analyzer": "suggestion_analyzer"
                },
                "string-sort": {
                    "type": "object",
                    "properties": {}
                }
            }
        }
    }
}
